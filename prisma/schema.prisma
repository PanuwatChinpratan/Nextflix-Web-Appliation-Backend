generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Favorite {
  id        String   @id @map("_id") @default(auto()) @db.ObjectId
  userId    String
  movieId   Int
  title     String
  posterUrl String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, movieId], name: "user_movie_unique")
}
